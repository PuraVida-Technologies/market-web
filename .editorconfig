# -- General Settings ------------------- #

root = true

# -- All Files (Defaults) --------------- #

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80

# -- Source Files ----------------------- #

[*.tsx]
max_line_length = 120

# -- Markdown Files --------------------- #

[*.md]
trim_trailing_whitespace = false
